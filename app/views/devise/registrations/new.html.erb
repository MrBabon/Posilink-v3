<% content_for :meta_title, "Page d'inscription • Posilink" %>
<% content_for :meta_description, "Inscrivez vous à Posilink" %>
<section class="h-100 gradient-form">
  	<div class="container py-4 h-100">
    	<div class="row d-flex justify-content-center align-items-center h-100">
      		<div class="col-xl-10 h-100">
        		<div class="card rounded-3 text-black gradient-custom-2 h-100">
          			<div class="row g-0">
            			<div class="d-flex align-items-center col-lg-6 ">
              				<div class="card-body p-md-5 mx-md-4 text-white" data-controller="registration-form">
								<h2>Inscription</h2>
									<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
										<%= f.error_notification %>
										<div class="form-inputs">
											<%# <%= f.input :is_organization, 
													as: :boolean, 
													label: "Je suis une association ",
													id: "user_is_organization",
													name: "user[is_organisation]",
													input_html: { "data-registration-form-target" => "checkbox", 
														"data-action" => "change->registration-form#toggle" } %>
											<%= f.input :nickname,
																	required: true,
																	autofocus: true,
																	label: "Nom d'utilisateur",
																	label_html: { class: 'label-left' } %>
											<%= f.input :email,
																	required: true,
																	autofocus: true,
																	label: "Email",
																	label_html: { class: 'label-left' } %>
											<%= f.input :password,
																	required: true,
																	hint: (@minimum_password_length ? ("<span style='color: white;'>#{@minimum_password_length} caractères minimum</span>").html_safe : nil),
																	label: "Mot de passe",
																	label_html: { class: 'label-left' } %>
											<%= f.input :password_confirmation,
																	required: true,
																	label: "Confirmation de mot de passe",
																	label_html: { class: 'label-left' } %>
										</div>
										<div class="form-actions button-registration">
											<%= f.button :submit, "S'inscrire", class: "btn btn-primary button-registration-submit" %>
											<%= link_to "Se connecter", new_session_path(resource_name)  %>
										</div>
                  					<% end %>
								<div class="text-center">
                  					<%= render "devise/shared/links" %>
                				</div>
							</div>
            			</div>
						<div class="col-lg-6 align-items-center">
						<div class="text-white px-3 py-4 p-md-5 mx-md-4">
							<h4 class="mb-4 text-center">Les associations contribuent à notre bien-être à tous !</h4>
							<p class="small mb-0 text-center">Aidez-nous à améliorer vôtre communauté.</p>
						</div>
						<div class="text-center">
							<%= image_tag"cover.png", style:"width: -webkit-fill-available;"%>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
