<% content_for :meta_title, "Page de connexion • Posilink" %>
<% content_for :meta_description, "Connectez-vous à Posilink" %>
<section class="h-100 gradient-form">
  <div class="container py-4 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10 h-100">
        <div class="card rounded-3 text-black gradient-custom-2 h-100">
          <div class="row g-0">
            <div class="d-flex align-items-center col-lg-6 ">
              <div class="card-body p-md-5 mx-md-4 text-white">
								<h2>Connexion</h2>
								<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
									<div class="form-inputs">
										<%= f.input :email,
																required: false,
																autofocus: true,
																label: "Email",
																label_html: { class: 'label-left' },
																input_html: { autocomplete: "email"} %>
										<%= f.input :password,
																required: false,
																label: "Mot de passe",
																label_html: { class: 'label-left' },
																input_html: { autocomplete: "current-password" }%>
										<%= f.input :remember_me,
																label: "Rester connecté",
																label_html: { class: 'label-left' },
																as: :boolean if devise_mapping.rememberable? %>
									</div>
									<div class="text-center">
										<%= f.button :submit, "Connexion",
																	class: "btn btn-primary button-registration-submit" %>
									</div>
								<% end %>
								<div class="text-center">
									<%= render "devise/shared/links" %>
								</div>
							</div>
            </div>
            <div class="col-lg-6 align-items-center">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4 text-center">Les associations contribuent à notre bien-être à tous !</h4>
                <p class="small mb-0 text-center">Aidez-nous à améliorer vôtre communauté.</p>
              </div>
              <div class="text-center">
                <%= image_tag"cover.png", style:"width: -webkit-fill-available;"%>
              </div>
            </div>
          </div>
        </div>
			</div>
    </div>
  </div>
</section>
