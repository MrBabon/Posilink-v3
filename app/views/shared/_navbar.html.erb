<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid text-white">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "cover.png" %>
      PosiLink
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Accueil", "/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Associations", organizations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Événements", my_events_user_path(current_user), class: "nav-link" %>
          </li>
          <!-- AVATAR PROFIL-->
          <li class="nav-item dropdown avat-pic">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.present? %>
                <%= cl_image_tag current_user.avatar.key, class: 'avatar', alt: "Avatar de #{current_user.nickname}" %>
              <% else %>
                <%= image_tag "cover.png", alt: "Avatar par défaut", class: "avatar" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profil", user_path(current_user), class: "dropdown-item" %>
              <%# <%= link_to "Messages", chatrooms_path, class: "dropdown-item" %>
              <%= link_to "Déconnexion", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
          <!-- END -->
        <% else %>
          <li class="nav-item">
            <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Inscription", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
