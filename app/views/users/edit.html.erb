<% content_for :meta_title, "Modifier mon compte • Posilink" %>
<% content_for :meta_description, "Mettre mon compte à jour avec Posilink" %>

<%= form_for(@user, url: user_path(@user), method: :patch, html: { multipart: true }) do |f| %>
  <%= f.label :nickname %>
  <%= f.text_field :nickname %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.submit "Mettre à jour le profil" %>
<% end %>

<%= link_to "Retour", :back %>
